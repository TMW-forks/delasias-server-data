// Assassinen Quest
// by captainhaggy@gmail.com (Hawkmoon @ irc.freenode.net)
// 26.12.2009
// This is a fun search and find quest - but still high level, because the hiding areas are not good for low level chars.


011-1.gat,37,29,0	script	Pranke	125,{
	if (ABENTEUER_HawkmoonKiller_state & (1 << 3)) goto L_ChatBros;
	if (ABENTEUER_HawkmoonKiller_state & 1) goto L_FoundBros;
	
	mes "The Bros seems to ignore you";
	close;
	
L_FoundBros:
	mes "[Pranke]";
	mes "\"Mekki?\"";
	next;
	mes "[Pranke]";
	mes "\"No, wait you're not Mekki Messer.\"";
	next;
	menu "Mekki sent me to find you!", -;
	mes "[Pranke]";
	mes "\"Oh? Kewl!";
	mes "That's good ya know.\"";
	next;
	menu "How did yo get here by the way?", -;
	mes "[Pranke]";
	mes "\"To be honest with you I have absolutely no idea xD.";
	mes "But all is kewl.";
	mes "If Mekki could come and help ma out of here, that would be great.\"";
	next;
	menu "Okay, I'll tell him.", -;
	mes "[Pranke]";
	mes "\"Yeah!\"";
	set ABENTEUER_HawkmoonKiller_state, ABENTEUER_HawkmoonKiller_state | (1 << 3);
	getexp 200000, 0;
	set zeny, zeny + 200000;
//deactivated -> getitem 576, 1; Beheader
	close;
	
L_ChatBros:
	set @TEMP,rand(2);
	if(@TEMP == 0) goto L_Chat1;
	if(@TEMP == 1) goto L_Chat2;
	
L_Chat1:
	mes "[Pranke]";
	mes "\"I like da job.\"";
	close;
	
L_Chat2:
	mes "[Pranke]";
	mes "\"*sighs* I still can't remember how I ended up here.\"";
	close;
}
