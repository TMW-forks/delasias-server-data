// Assassinen Quest
// by captainhaggy@gmail.com (Hawkmoon @ irc.freenode.net)
// 26.12.2009
// This is a fun search and find quest - but still high level, because the hiding areas are not good for low level chars.


018-3.gat,63,61,0	script	Flinkefuss	126,{
	if (ABENTEUER_HawkmoonKiller_state & (1 << 2)) goto L_ChatBros;
	if (ABENTEUER_HawkmoonKiller_state & 1) goto L_FoundBros;
	
	mes "The Bros seems to ignore you";
	close;


	
L_FoundBros:
	mes "[Flinkefuss]";
	mes "\"Hrmm, you look like a bros from Mekki Messer.\"";
	next;
	menu "I've been sent by Mekki to contact you.", -;
	mes "[Flinkefuss]";
	mes "\"Easy, man.";
	mes "\"If yo could, tell Mekki I'm okay and I'll be back shortly?\"";
	next;
	menu "Sure!", -;
	mes "[Flinkefuss]";
	mes "\"Great!";
	mes "See yo!\"";
	set ABENTEUER_HawkmoonKiller_state, ABENTEUER_HawkmoonKiller_state | (1 << 2);
	getexp 200000, 0;
	set zeny, zeny + 200000;
//deactivated ->	getitem 574, 1; Scorpion
	close;
	
L_ChatBros:
	set @TEMP,rand(2);
	if(@TEMP == 0) goto L_Chat1;
	if(@TEMP == 1) goto L_Chat2;
	
L_Chat1:
	mes "[Flinkefuss]";
	mes "\"Lemme see, I've been around long enough.";
	mes "I guess after that it's back down to Mekki.\"";
	close;
	
L_Chat2:
	mes "[Flinkefuss]";
	mes "\"I miss ma mommy *sighs*.\"";
	close;
}
