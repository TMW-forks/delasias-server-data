// Assassinen Quest
// by captainhaggy@gmail.com (Hawkmoon @ irc.freenode.net)
// 26.12.2009
// This is a fun search and find quest - but still high level, because the hiding areas are not good for low level chars.

024-1.gat,33,55,0	script	Claas Stoertebeeker	126,{
	if (ABENTEUER_HawkmoonKiller_state & (1 << 9)) goto L_ChatBros;
	if (ABENTEUER_HawkmoonKiller_state & 1) goto L_FoundBros;
	
	mes "The Bros seems to ignore you";
	close;

L_FoundBros:
	menu "Hi!", -;
	mes "[Claas Stoertebeeker]";
	mes "\"No, I'm not doing autographs!\"";
	next;
	menu "No, that's not what I was going to say.", -;
	mes "[Claas Stoertebeeker]";
	mes "\"Well then what do you want?";
	mes "I am very busy you know.\"";
	next;
	menu "I'm helping Mekki contact his Bros.", -;
	mes "[Claas Stoertebeeker]";
	mes "\"Congratulations you found me.";
	mes "Anything else?\"";
	next;
	menu "Umm... Are you okay?", -;
	mes "[Claas Stoertebeeker]";
	mes "\"What do you mean by that?\"";
	next;
	menu "You just seem a bit edgy.", -;
	mes "[Claas Stoertebeeker]";
	mes "\"Well if you had to put with being the 'famous one' you'd understand.\"";
	next;
	mes "[Claas Stoertebeeker]";
	mes "\"It's hard to get time to myself, you know?.";
	mes "";
	mes "People don't even leave me alone when I doing my shopping.\"";
	next;
	mes "[Claas Stoertebeeker]";
	mes "\"Erm... yeah.";
	mes "Sorry, I should just save all that for my therapist.\"";
	next;
	menu "It's okay. I'll tell Mekki you're here, alright?", -;
	mes "[Claas Stoertebeeker]";
	mes "\"Yeah, okay.";
	mes "Take care.\"";
	set ABENTEUER_HawkmoonKiller_state, ABENTEUER_HawkmoonKiller_state | (1 << 9);
	getexp 200000, 0;
	set zeny, zeny + 200000;
//deactivated -> getitem 756, 1; Assassin Gloves
	close;
	
L_ChatBros:
	set @TEMP,rand(2);
	if(@TEMP == 0) goto L_Chat1;
	if(@TEMP == 1) goto L_Chat2;
	
L_Chat1:
	mes "[Claas Stoertebeeker]";
	mes "\"You know the song about me?";
	mes "Yeah, well I don't get a penny from it.\"";
	close;
	
L_Chat2:
	mes "[Claas Stoertebeeker]";
	mes "\"Can I have some space please?.\"";
	close;
}
