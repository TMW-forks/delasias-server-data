// Assassinen Quest
// by captainhaggy@gmail.com (Hawkmoon @ irc.freenode.net)
// 26.12.2009
// This is a fun search and find quest - but still high level, because the hiding areas are not good for low level chars.

027-1.gat,129,51,0	script	Knallschote	125,{
	if (ABENTEUER_HawkmoonKiller_state & (1 << 8)) goto L_ChatBros;
	
	mes "[Knallschote]";
	mes "\"HIC!...HIC!....HIC!...\"";
	next;
	mes "The Bros staggers and almost falls down, but catches itself in the last moment.";
	next;
	mes "[Knallschote]";
	mes "\"Oh boy, I don't feel well.\"";
	
	if (ABENTEUER_HawkmoonKiller_state & 1) goto L_FoundBros;
	
	close;
	
L_FoundBros:
	next;
	menu "Are you alright?",-;
	mes "[Knallschote]";
	mes "\"Are you... are y-you... are you Mekki?\"";
	next;
	menu "No, but he sent me to search for you.",-;
	mes "[Knallschote]";
	mes "\"I... I was searching for M-Mekki aaaaall around.";
	mes "...went to pub HIC! to warm myself HIC!\"";
	next;
	mes "[Knallschote]";
	mes "\"The nice man gave me warm drink HIC!\"";
	next;
	mes "[Knallschote]";
	mes "\"First mug tasted strange HIC! Second better HIC! Third really good HIC\"";
	next;
	mes "[Knallschote]";
	mes "\"After the fourth mug everything started spinning.\"";
	next;
	mes "[Knallschote]";
	mes "\"No idea what happened then.\"";
	next;
	mes "[Knallschote]";
	mes "\"HIC!\"";
	next;
	menu "You are drunk.",-;
	mes "[Knallschote]";
	mes "\"Seems so.\"";
	next;
	menu "I will show you the way to Mekki",-;
	mes "[Knallschote]";
	mes "\"Th...Thank you.\"";
	next;
	mes "[Knallschote]";
	mes "\"I think I will find the way now... I hope.\"";
	next;
	mes "[Knallschote]";
	mes "\"HIC!\"";
	set ABENTEUER_HawkmoonKiller_state, ABENTEUER_HawkmoonKiller_state | (1 << 8);
	getexp 200000, 0;
	set zeny, zeny + 200000;
	//deactivated ->	getitem 757, 1; Assassin Boots
	close;
	
L_ChatBros:
	set @TEMP,rand(2);
	if(@TEMP == 0) goto L_Chat1;
	if(@TEMP == 1) goto L_Chat2;
	
L_Chat1:
	mes "[Knallschote]";
	mes "\"Ooooh, my head!\"";
	close;
	
L_Chat2:
	mes "[Knallschote]";
	mes "\"I promise, I will stop drinking. I know I can do it. I did it a hundred times.\"";
	close;
}
